# 基本設定
export LANG=ja_JP.UTF-8
bindkey -e
FUNCNEST=1000

# キャッシュディレクトリの作成
[[ ! -d ~/.cache/zsh ]] && mkdir -p ~/.cache/zsh

# Powerlevel10k instant prompt
if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi

# zinit
if [[ ! -f $HOME/.local/share/zinit/zinit.git/zinit.zsh ]]; then
    print -P "%F{33} %F{220}Installing zinit...%f"
    command mkdir -p "$HOME/.local/share/zinit" && command chmod g-rwX "$HOME/.local/share/zinit"
    command git clone --depth 1 https://github.com/zdharma-continuum/zinit "$HOME/.local/share/zinit/zinit.git"
fi
source "$HOME/.local/share/zinit/zinit.git/zinit.zsh"

# プラグイン
zinit ice depth=1
zinit light romkatv/powerlevel10k

zinit wait lucid for \
    atload"_zsh_autosuggest_start" \
    zsh-users/zsh-autosuggestions \
    zsh-users/zsh-completions \
    zdharma-continuum/fast-syntax-highlighting

# fzf と anyframe
zinit ice from"gh-r" as"program"
zinit light junegunn/fzf
zinit light mollifier/anyframe

# 補完の初期化
# ユーザーのローカル fpath を優先
fpath=(
    ~/.zsh/functions  # 必要に応じてカスタム関数ディレクトリを追加
    $fpath
)

# システムと brew のパスを追加
FPATH="$(brew --prefix)/share/zsh/site-functions:${FPATH}"
if type brew &>/dev/null; then
    FPATH="$(brew --prefix)/share/zsh/site-functions:${FPATH}"
fi

fpath=(
    ${FPATH}
    /usr/local/share/zsh/site-functions
    /usr/share/zsh/vendor-completions
    /usr/share/zsh/site-functions
    $fpath
)

autoload -Uz compinit
local zcd=~/.cache/zsh/.zcompdump
if [[ -n "$zcd"(#qN.mh+24) ]]; then
    compinit -C -d "$zcd"
else
    compinit -d "$zcd"
    touch "$zcd"
fi

# 補完設定
zstyle ':completion:*' format '%B%F{blue}%d%f%b'
zstyle ':completion:*' group-name ''
zstyle ':completion:*:default' menu select=2
zstyle ':completion:*' list-colors "${(s.:.)LS_COLORS}"
zstyle ':completion:*' matcher-list 'm:{a-z}={A-Z}'
zstyle ':completion:*' keep-prefix
zstyle ':completion:*' recent-dirs-insert both
zstyle ':completion:*' completer _complete _ignored _files

# fzf 履歴検索
function fzf-history-search() {
    local tac
    if command -v tac > /dev/null 2>&1; then
        tac="tac"
    else
        tac="tail -r"
    fi
    BUFFER=$(history -n 1 | eval $tac | fzf --query "$LBUFFER" --no-sort)
    CURSOR=$#BUFFER
    zle reset-prompt
}
zle -N fzf-history-search

# キーバインド
bindkey '^R' fzf-history-search
bindkey '^P' history-beginning-search-backward
bindkey '^N' history-beginning-search-forward
bindkey -r '^I' # デフォルトの Tab 補完をunbind
bindkey '^I' complete-word

# 不要なエスケープシーケンスのunbind
bindkey -r '\e[1;5u'
bindkey -r '\e[2;27~'

# 履歴設定
HISTFILE=~/.zsh_history
HISTSIZE=50000
SAVEHIST=50000
setopt HIST_IGNORE_DUPS
setopt HIST_IGNORE_ALL_DUPS
setopt HIST_IGNORE_SPACE
setopt HIST_SAVE_NO_DUPS
setopt SHARE_HISTORY
setopt INC_APPEND_HISTORY

# 基本オプション
setopt AUTO_CD
setopt AUTO_PARAM_SLASH
setopt NO_BEEP
setopt IGNOREEOF
setopt INTERACTIVE_COMMENTS

# PATH 設定
typeset -U path PATH
path=(
    $HOME/bin/{main,develop}
    /usr/local/bin
    /usr/bin
    /bin
    $path
)

# ls エイリアス
if type gls > /dev/null 2>&1; then
    alias ls='gls --color=auto'
elif ls --color > /dev/null 2>&1; then
    alias ls='ls --color=auto'
else
    alias ls='ls -G'
fi

# mise
eval "$(~/.local/bin/mise activate)"

# Powerlevel10k 設定
[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh